{
  "name": "goodebook",
  "description": "Chrome extension to download and read books from Goodreads.",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/KleoPetroff/goodchitanka.git",
  "author": "KleoPetroff <kleopetroff@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "webpack --mode=production --node-env=production",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production --node-env=production",
    "watch": "webpack --watch",
    "prettier:check": "prettier ./src/**/*.ts --check",
    "prettier:fix": "prettier ./src/**/*.ts --write",
    "clear": "rimraf ./dist",
    "lint": "eslint ./src",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/chrome": "0.0.315",
    "@types/lodash-es": "4.17.12",
    "copy-webpack-plugin": "13.0.0",
    "lodash-es": "4.17.21",
    "prettier": "3.5.3",
    "stream-browserify": "3.0.0",
    "typescript": "5.8.3",
    "webpack": "5.99.6",
    "xml-js": "1.6.11"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "8.30.1",
    "@typescript-eslint/parser": "8.30.1",
    "css-loader": "7.1.2",
    "eslint": "9.25.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-prettier": "5.2.6",
    "html-webpack-plugin": "5.6.3",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "node-polyfill-webpack-plugin": "4.1.0",
    "rimraf": "6.0.1",
    "style-loader": "4.0.0",
    "ts-loader": "9.5.2",
    "webpack-cli": "6.0.1"
  },
  "lint-staged": {
    "src/**/*.ts": "npm run lint"
  }
}
